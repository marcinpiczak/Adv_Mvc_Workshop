<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">MyMessagePortal</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Channel" asp-action="Index">Kanały</a></li>
                        <li><a asp-controller="Message" asp-action="Index">Wiadomości</a></li>
                    }
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a>Witaj [@User.Identity.Name]</a></li>
                        <li><a asp-controller="Account" asp-action="LogOut"><span class="glyphicon glyphicon-log-out"></span> Wyloguj</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Register"><span class="glyphicon glyphicon-user"></span> Rejestracja</a></li>
                        <li><a asp-controller="Account" asp-action="LogIn"><span class="glyphicon glyphicon-log-in"></span> Zaloguj</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @if (@TempData["Message"] != null)
        {
            <div class="alert alert-dismissible alert-info">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>@TempData["Message"]</strong>
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - MyMessagePortal</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
