<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/glyphs.css" />
    <link rel="stylesheet" href="~/css/font-awesome.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">MyMessagePortal</a>
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Channel" asp-action="Index" class="nav-link">Kanały</a></li>
                        <li><a asp-controller="Message" asp-action="Index" class="nav-link">Wiadomości</a></li>
                    }
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a class="nav-link">Witaj [@User.Identity.Name]</a></li>
                        <li><a asp-controller="Account" asp-action="LogOut" class="nav-link"><i class="fa fa-sign-out fa-lg" aria-hidden="true"></i> Wyloguj</a></li>
                    }
                    else
                    {
                        <li><a asp-controller="Account" asp-action="Register" class="nav-link"><i class="fa fa-user-o fa-lg" aria-hidden="true"></i> Rejestracja</a></li>
                        <li><a asp-controller="Account" asp-action="LogIn" class="nav-link"><i class="fa fa-sign-in fa-lg" aria-hidden="true"></i> Zaloguj</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @if (@TempData["Message"] != null)
        {
            <div class="alert alert-dismissible alert-info">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>@TempData["Message"]</strong>
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - MyMessagePortal</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
